<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.laoyin.mybatis.mapper.UserMapper">

    <select id="findById" resultType="com.laoyin.mybatis.model.User">
        select id, name, age, email
        from user
        where id = #{id};
    </select>

    <update id="update" parameterType="com.laoyin.mybatis.model.User">
        update user
        set name  = #{name},
            age   = #{age},
            email = #{email}
        where id = #{id}
    </update>
</mapper>